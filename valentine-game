<body>

<div id="counter">Hearts: 0 / 7</div>
<div id="game"></div>

<div id="final">
  <div>
    <h1>Will you be my Valentine? ‚ù§Ô∏è</h1>
    <p>You tapped all my hearts üòå</p>
  </div>
</div>

<script>
let score=0;
const target=7;
const game=document.getElementById("game");
const counter=document.getElementById("counter");
const final=document.getElementById("final");

function spawnHeart(){
  const h=document.createElement("div");
  h.className="heart";
  h.innerHTML="‚ù§Ô∏è";
  h.style.left=Math.random()*90+"%";
  h.style.top=Math.random()*90+"%";

  h.onclick=()=>{
    h.remove();
    score++;
    counter.innerText=`Hearts: ${score} / ${target}`;
    if(score>=target){
      final.style.display="flex";
    }
  };

  game.appendChild(h);
}

for(let i=0;i<7;i++){
  spawnHeart();
}
</script>

